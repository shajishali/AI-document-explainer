# Production Environment Variables Template for AI Legal Explainer
# Copy this file to .env.production and fill in your actual values

# Django Settings
SECRET_KEY=your-super-secret-production-key-here
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-alb-dns-name.us-east-1.elb.amazonaws.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database (RDS MySQL)
DB_NAME=ai_legal_explainer
DB_USER=admin
DB_PASSWORD=your-secure-database-password
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=3306

# AWS Services
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-app-storage-bucket-name
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=your-s3-bucket-name.s3.amazonaws.com

# Redis (ElastiCache)
REDIS_URL=redis://your-redis-endpoint:6379/0
CELERY_BROKER_URL=redis://your-redis-endpoint:6379/0
CELERY_RESULT_BACKEND=redis://your-redis-endpoint:6379/0

# Email (SES)
EMAIL_HOST=email-smtp.us-east-1.amazonaws.com
EMAIL_HOST_USER=your-ses-user
EMAIL_HOST_PASSWORD=your-ses-password
EMAIL_PORT=587
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Google AI (Gemini)
GOOGLE_API_KEY=your-gemini-api-key

# Monitoring and Health Checks
HEALTH_CHECK_DISK_USAGE_MAX=90
HEALTH_CHECK_MEMORY_MIN=100
HEALTH_CHECK_DATABASE_TIMEOUT=5

# Backup Configuration
BACKUP_S3_BUCKET=your-backup-bucket-name
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Performance Settings
STATICFILES_STORAGE=storages.backends.s3boto3.S3Boto3Storage
DEFAULT_FILE_STORAGE=storages.backends.s3boto3.S3Boto3Storage

# Security Settings
SECURE_SSL_REDIRECT=True
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# CORS Settings
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATELIMIT_ENABLE=True
RATELIMIT_USE_CACHE=default

# AI Model Configuration
AI_MODEL_PATH=/opt/ai_models
AI_MODEL_CACHE_SIZE=104857600
